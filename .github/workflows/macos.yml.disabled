permissions:
  contents: read

# runs on push to the main branch, and PRs
on:
  push:
    branches: [main]
  pull_request:

name: macos build

jobs:
  #
  build:
    name: "üçé stable build"
    runs-on: macos-latest
    env:
      COLORTERM: truecolor
      NPROC: 2
      TERM: xterm

    steps:
      - name: "ü¶Ä libnotcurses-sys checkout"
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
          # submodules: true

      - name: "install rust stable"
        uses: dtolnay/rust-toolchain@stable

      - name: "cargo build"
        run: cargo build

